<%= form_for @collection do |f| %>
	<div class="field">
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</div>
	<div class="field">
	  <%= f.label :variable_dimesions? %>
	  <%= f.check_box :variable %>
	</div>
	<div class="field">
	  <%= f.label :width %>
	  <%= f.text_field :width %>
	</div>
	<div class="field">
	  <%= f.label :height %>
	  <%= f.text_field :height %>
	</div>
  <div class="button confirm_button">
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<% end %>
