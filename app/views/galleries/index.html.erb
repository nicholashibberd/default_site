<div class="top_right_controls">
	<%= link_to 'New Gallery', new_gallery_path, :class => 'btn btn-info' %>
</div>

<div class="page_header">
	<h1 class="header">Galleries</h1>
</div>

<section class="page_content">
	<% @galleries.each do |gallery| %>
		<div class="index_item page_index_item">
			<div class="controls">
				<%= link_to 'Delete', gallery_path(gallery), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger' %>			
				<%= link_to 'Edit', gallery_images_path(gallery), :class => 'btn btn-warning' %>			
			</div>
			<%= link_to gallery.name, gallery_images_path(gallery) %>
		</div>
	<% end %>
</section>